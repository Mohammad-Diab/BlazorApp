<tr>
    @for (int i = 0; i < Headers.Count; i++)
    {
        int index = i + 1;
        <th>
            <a class="btn-link pl-1">@Headers[i]</a>
        </th>
    }
    <th>
        <a class="btn-link">Actions</a>
    </th>
</tr>

@code {
    [Parameter] public List<string> Headers { get; set; }

}
